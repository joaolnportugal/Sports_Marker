@using Sports_Marker.Web.Models
@model EnterGameViewModel

<!-- Section: Design Block -->
<section class="text-center text-lg-start">
  <style>
    .cascading-right {
      margin-right: -50px;
    }

    @@media (max-width: 991.98px) {
      .cascading-right {
        margin-right: 0;
      }
    }
  </style>

  <!-- Jumbotron -->
  <div class="container py-5">
    <div class="row g-0 align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
          <div class="card-body p-5 shadow-5 text-center">
            <h2 class="fw-bold mb-5">Register your team</h2>
            <form asp-controller="sm" asp-action="index" method="post">
       

              <!-- Email input -->
              <div class="form-outline mb-4">
                <input asp-for="Team" id="team-name" class="form-control" />
                <label class="fw-bold mb-5" asp-for="Team">Team Name</label>
                <span asp-validation-for="Team" class="text-danger"></span>
                @*<input type="hidden" asp-for="Id" class="form-control" value="@Model.Id" />
                <input type="hidden" asp-for="AvailableColors" class="form-control" value="@Model.AvailableColors" />
                <input type="hidden" asp-for="SelectedColor" class="form-control" value="@Model.SelectedColor" />
                <input type="hidden" asp-for="inGame" class="form-control" value="@Model.inGame" />*@
                
              </div>

         

            <!-- Color Selector-->
                        <div class="mb-4">
                            
                            <br />
                            @*<div class="form-control">*@
                                @foreach (var color in Model.AvailableColors)
                                {
                                    <input type="radio" class="btn-check" asp-for="SelectedColor" id="@color.Name" value="@color.Id" autocomplete="off">
                                    <label style="font-size:12px" class="btn @color.CssClassName" for="@color.Name">@color.Name</label>
                                }
                                <br />
                                <span asp-validation-for="SelectedColor" class="text-danger"></span>
                                <label class="fw-bold mb-5">Team Color</label>
                            @*</div>*@
                        </div>
                        <br />
              <!-- Submit button -->
              <button  type="submit" class="btn btn-primary btn-block mb-4">
                Enter Game
              </button>

          


             
            </form>
          </div>
        </div>
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0">
        <img src="https://www.dropbox.com/s/4f0bl7tjb0vprld/football%20aesthetic.png?raw=1" class="w-100 rounded-4 shadow-4"
          alt="" />
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->
    

